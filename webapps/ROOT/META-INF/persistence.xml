<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

  <!-- Shepherd Project -->
  <persistence-unit name="ShepherdProject">
    <provider>org.datanucleus.jpa.PersistenceProviderImpl</provider>
    <class>org.ecocean.MarkedIndividual</class>
    <class>org.ecocean.Encounter</class>
    <properties>
      <property name="datanucleus.ConnectionDriverName"
                value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="datanucleus.ConnectionURL"
                value="jdbc:derby:shepherd_derby_database;create=true"/>
      <property name="datanucleus.ConnectionUserName" value="shepherd"/>
      <property name="datanucleus.ConnectionPassword" value="shepherd"/>
    </properties>
  </persistence-unit>


</persistence>